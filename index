<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>BLE Test</title>
</head>
<body>
  <h1>BLE Test Page</h1>
  <button id="connectBtn">Connect to BLE Device</button>
  <p id="status"></p>

  <script>
    const status = document.getElementById('status');
    document.getElementById('connectBtn').addEventListener('click', async () => {
      if (!navigator.bluetooth) {
        status.textContent = "Web Bluetooth not available in this browser.";
        alert(status.textContent);
        return;
      }
      try {
        const device = await navigator.bluetooth.requestDevice({
          filters: [{ services: ['heart_rate'] }]
        });
        status.textContent = "Found device: " + device.name;
        alert(status.textContent);
      } catch (err) {
        status.textContent = "BLE request failed: " + err;
        console.error(err);
        alert(status.textContent);
      }
    });
  </script>
</body>
</html>
